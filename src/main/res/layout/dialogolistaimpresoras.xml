<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderradius"
    android:backgroundTint="@color/blanco">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearCompletado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textColor="@color/blanco"
                android:background="@drawable/boton_selector_gris"
                android:backgroundTint="@color/grisoscuro"
                android:gravity="center"
                android:text="Volver" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lsearch"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"

            android:backgroundTint="@color/grisoscuromasclaro"
            android:background="@drawable/borderradius30"

            android:orientation="horizontal">
               <EditText android:id="@+id/Search"  android:layout_width="match_parent" android:background="@drawable/borderradius30"             android:layout_marginStart="10dp" android:textSize="24dp" android:layout_marginEnd="10dp"  android:layout_height="match_parent" android:hint="Buscar:" android:textColor="@color/blanco" android:textColorHint="@color/blanco" android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_weight="40"/>
                <ImageView android:id="@+id/btSearch"   android:layout_width="160dp" android:layout_height="match_parent" android:layout_margin="8dp" android:layout_gravity="center" android:layout_weight="1" android:src="@drawable/ic_baseline_search_24" app:tint="@color/negro" android:background="@drawable/campollenarclickeable" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner_menu_"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:indeterminateTint="@color/gregorutti_color"

                android:indeterminate="true" />

        </RelativeLayout>



    </LinearLayout>

</FrameLayout>